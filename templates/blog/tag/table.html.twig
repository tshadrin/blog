{% extends 'base.html.twig' %}
{% block body %}
    <div class="p-4 w-100">
    <div class="col-12 p-0">
        <ul class="nav nav-pills mb-1 ml-0 mr-0">
            <li class="nav-item p-1">
                <a class="btn btn-sm bg-primary text-white" href="{{ path('tag.add') }}">{{ 'Add tag'|trans }}</a>
            </li>
        </ul>
    </div>
    <table class="table w-100 table-bordered">
    <thead>
    <tr>
        <th class=" p-2 m-0">#</th>
        <th class=" p-2 m-0">{{ 'Name'|trans }}</th>
        <th class=" p-2 m-0">{{ 'Actions'|trans }}</th>
    </tr>
    </thead>
        <tbody>
    {% for tag in tags %}
            <tr>
                <td class=" p-2 m-0">{{ tag.id }}</td>
                <td class=" p-2 m-0"><a class="text-dark" href="{{ path('blog.show', {'post': tag.id}) }}">{{ tag.name }}</a></td>
                <td class=" p-2 m-0">
                    <ul class="nav nav-pills pb-1">
                        <li class="nav-item p-1">
                            <a class="btn btn-sm bg-primary text-white" href="{{ path('tag.edit', {'tag': tag.id}) }}">{{ 'Edit'|trans }}</a>
                        </li>
                        <li class="nav-item p-1">
                            <a class="btn btn-sm bg-danger text-white" href="{{ path('blog.edit', {'post': tag.id}) }}">{{ 'Remove'|trans }}</a>
                        </li>
                    </ul>
                </td>
            </tr>
    {% endfor %}
        </tbody>
    </table>
    <div class="col-12 pt-2">{{ knp_pagination_render(tags, null, {}, {'align': 'center', 'size': 'small'}) }}</div>
    </div>
{% endblock %}